# Stack
ctrl - up : yabai -m window --focus stack.prev || yabai -m window --focus stack.last
ctrl - down : yabai -m window --focus stack.next || yabai -m window --focus stack.first

# Toggle layout mode
alt + cmd - t : toggle_layout
alt + cmd - return : yabai -m window --toggle zoom-fullscreen
alt + shift + cmd - return : yabai -m window --toggle native-fullscreen

# Swap windows
ctrl + alt + cmd - left: yabai -m window --swap prev || yabai -m window --swap next
ctrl + alt + cmd - right: yabai -m window --swap next || yabai -m window --swap prev

# Focus spaces
alt - f1 : yabai -m space --focus 1
alt - f2 : yabai -m space --focus 2
alt - f3 : yabai -m space --focus 3
alt - f4 : yabai -m space --focus 4
alt - f5 : yabai -m space --focus 5
alt - f6 : yabai -m space --focus 6
ctrl - left : yabai -m space --focus prev || yabai -m space --focus last
ctrl - right : yabai -m space --focus next || yabai -m space --focus first

# Focus windows
ctrl + shift - left : yabai -m window --focus prev || yabai -m window --focus last
ctrl + shift - right : yabai -m window --focus next || yabai -m window --focus first

# Send window to space
alt + cmd - f1 : yabai -m window --space 1 && yabai -m space --focus 1
alt + cmd - f2 : yabai -m window --space 2 && yabai -m space --focus 2
alt + cmd - f3 : yabai -m window --space 3 && yabai -m space --focus 3
alt + cmd - f4 : yabai -m window --space 4 && yabai -m space --focus 4
alt + cmd - f5 : yabai -m window --space 5 && yabai -m space --focus 5
alt + cmd - f6 : yabai -m window --space 6 && yabai -m space --focus 6

